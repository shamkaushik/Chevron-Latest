<div class="bg-forms inquiry-type-container xs-mt-15 xs-p-15">   
    <span> {{globalVars.formDesc}} </span>    
    <div class="row xs-pt-15">
        <div class="col-xs-24">
            <label for="stationNo">
                {{globalVars.chargebackInquiry.stationNoLabel}}
            </label> <br/>   
            <span id="stationNo">
                    <input type="text" id="stationNoVal" name="stationNoVal" class="input-field-style input-element" data-parsley-required="" data-parsley-trigger="focusout" /> 
            </span>  
        </div>
        <div class="col-xs-24 xs-pt-15">
            <label for="chargebackNo">
                {{globalVars.chargebackInquiry.chargebackNoLabel}}
            </label> <br/>   
            <span id="chargebackNo">
                    <input type="text" id="chargebackValue" name="chargebackValue" class="input-field-style input-element"/> 
            </span>  
        </div>
        <div class="col-md-4 col-xs-24">
            <div class="row xs-pt-15">
                <div class="col-xs-24">                    
                    <span id="chargebackDate">
                        <div class='js-search-pickDateRange'></div>
                    </span>                            
                </div>                
            </div>
            <div class="row xs-pt-15">
                <div class="col-xs-24">
                    <label for="amount">
                    {{globalVars.chargebackInquiry.amount}}
                    </label> <br/>  
                    <span id="amount"> 
                        <input type="text" id="amountValue" name="amountValue" class="input-field-style input-element"/>  
                    </span>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-xs-24 xs-pt-15">
            <label for="reason">
                {{globalVars.chargebackInquiry.reasonLabel}}
            </label> <br/>  
            <span id="reason">     
                <textarea name="reasonText" id="reasonText" class="textarea-style input-element" data-parsley-required="" data-parsley-trigger="focusout" ></textarea>                         
            </span>
        </div>
    </div>        
</div>