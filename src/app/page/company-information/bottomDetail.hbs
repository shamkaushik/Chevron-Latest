<div class = "grey-bg xs-pl-10 xs-pt-10">
    <div class = "row sub-heading-thin">
        <div class="col-xs-24 xs-ml-5">
            <span class="sub-heading-thin">{{globalVars.cmpnyDetails}}</span>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-24">
            <div class="xs-mt-10 col-md-5 col-xs-24">
                <div class='js-search-dateRange form-group'>
                </div>
            </div>  
        </div>
    </div>
    <div class = "row sub-heading-thin">
        <div class="col-xs-24 xs-ml-5">
            <span class="sub-heading-thin">{{globalVars.mailPreferences}}</span>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-24">
            <div class="xs-mt-10 xs-mr-10 col-md-7 col-xs-24">
                <label><strong>{{globalVars.phyAddress}}</strong></label>
                <p class="xs-mt-0">{{cmpnyInfoResponse.mailPreferences.phyAddress}}</p>
            </div>
            <div class="xs-mt-10 col-md-5 col-xs-24">
                <label><strong>{{globalVars.attention}}</strong></label>
                <p class="xs-mt-0"><input type="text" id="phy-attention" class="col-xs-22 col-sm-10 col-md-22 input-box-style" value="{{cmpnyInfoResponse.mailPreferences.phyAddressAttention}}"/></p>
            </div>
            <div class="xs-mt-10 col-md-6 col-xs-22 col-sm-10 js-carrierPreference-ddn"  id="phy-ddn">
            </div>
        </div>
        <div class="col-xs-24">
             <div class="xs-mt-10 xs-mr-10 col-md-7 col-xs-24">
                <label><strong>{{globalVars.altAddress}}</strong></label>
                <p class="xs-mt-0">{{cmpnyInfoResponse.mailPreferences.altAddress}}</p>
            </div>
             <div class="xs-mt-10 col-md-5 col-xs-24">
                <label><strong>{{globalVars.attention}}</strong></label>
                <p class="xs-mt-0"><input type="text" id="alt-attention" class="col-xs-22 col-sm-10 col-md-22 input-box-style" value="{{cmpnyInfoResponse.mailPreferences.altAddressAttention}}"/></p>
            </div>
            <div class="xs-mt-10 col-md-6 col-xs-22 col-sm-10 js-carrierPreference-ddn" id="alt-ddn">
            </div>
        </div>
        <div class="col-xs-24 xs-ml-5 xs-mt-10 form-group">
            <span><strong>{{globalVars.note}}:</strong> {{globalVars.privateCarrierText}}</span>
        </div>
    </div>
</div>
<div class = "row xs-mt-15">
    <div class = "col-xs-24">
        <button class="btn btn-primary pull-right saveBtn" disabled="disabled">{{globalVars.saveBtn}}</button>
    </div>     
</div>