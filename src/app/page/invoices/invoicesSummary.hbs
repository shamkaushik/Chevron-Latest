<div class="row">
    <div class="col-xs-24">
        <span class="sub-heading-thin">{{globalVars.invoicesSummary}}</span>
    </div>
</div>
<div class="row">
<div class="col-xs-13">
    <div class="row xs-mt-10">
          <div class="col-xs-24">
            <span>
              {{#if showSoldTo}}
              {{globalVars.soldTo}}
              {{else}}
              {{globalVars.account}}
              {{/if}}</span>
            <span>{{invoicesResponse.soldShipToBlock}}{{invoicesResponse.soldShipToNormal}}</span>
          </div>
    </div>
    <div class="row xs-mt-10">
      <div class="col-xs-24 text-primary">
          <i>{{globalVars.summaryfromAndToVar}}</i>
      </div>
    </div>
</div>
<div class="col-xs-11">
    <div class="row xs-mt-10">
        <div class="xs-mt-15 visible-xs"></div>
        <div class="col-md-17 col-sm-15 col-xs-7 text-right">
        <label class="xs-pr-10">{{globalVars.debits}}</label>
        </div>
        <div class="col-md-7 col-sm-9 col-xs-17 text-right">
          {{#if showDebitCredit}}
              <span>{{invoicesResponse.debits}} {{invoicesResponse.currency}}</span>
          {{/if}}
        </div>
    </div>
    <div class="row xs-mt-5">
        <div class="col-md-17 col-sm-15 col-xs-7 text-right">
          <label class="xs-pr-10 {{#text-red}}{{invoicesResponse.credits}}{{/text-red}}">{{globalVars.credits}}</label>
        </div>
        <div class="col-md-7 col-sm-9 col-xs-17 text-right">
            {{#if showDebitCredit}}
             <span>{{#text-danger}}{{invoicesResponse.credits}} {{invoicesResponse.currency}}{{/text-danger}}</span>
            {{/if}} 
        </div>
    </div>
</div>
</div>