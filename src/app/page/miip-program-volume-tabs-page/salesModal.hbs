<div class="modal fade" id="addSalesModal" tabindex="-1" role="dialog" aria-labelledby="addSalesModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="addSalesModalLabel">Add New Sales Month Volume</h4>
            </div>
            <div class="modal-body">
                <table data-toggle="table" id="addSalesTable" class="table">
                    <thead>
                        <tr>
                            <th>Sales Month</th>
                            <th>RUL(GA)</th>
                            <th>MUL(GA)</th>
                            <th>PUL(GA)</th>
                            <th>Total (GA)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                              <input type="text" onkeypress="return (event.charCode == 8 || event.charCode == 0 || event.charCode == 13) ? null : event.charCode >= 48 && event.charCode <= 57" class="form-control pull-left xs-mr-5 sales-popup-input-text-small sales-month text-right" placeholder="MM" maxlength="2" >
                              <input type="text" onkeypress="return (event.charCode == 8 || event.charCode == 0 || event.charCode == 13) ? null : event.charCode >= 48 && event.charCode <= 57" class="form-control sales-popup-input-text-medium sales-year text-right" placeholder="YYYY" maxlength="4">

                            </td>
                              <td><input type="text" onkeypress="return (event.charCode == 8 || event.charCode == 0 || event.charCode == 13) ? null : event.charCode >= 48 && event.charCode <= 57"
                                class="form-control sales-popup-input-text-large js-quantity-input rul-quantity text-right"></td>
                              <td><input type="text" onkeypress="return (event.charCode == 8 || event.charCode == 0 || event.charCode == 13) ? null : event.charCode >= 48 && event.charCode <= 57"
                                  class="form-control sales-popup-input-text-large js-quantity-input mul-quantity text-right"></td>
                              <td><input type="text" onkeypress="return (event.charCode == 8 || event.charCode == 0 || event.charCode == 13) ? null : event.charCode >= 48 && event.charCode <= 57"
                                  class="form-control sales-popup-input-text-large js-quantity-input pul-quantity text-right"></td>
                              <td class="text-right"><span class="total-volume total-volume-field-style xs-mr-10"></span></td>
                      </tr>
                    </tbody>
                </table>
                <div class="alert alert-danger add-new-volume-errors error-msg-container">
                    <span class="alert-message error-msg-total-element hide">Total Volume should be greater than zero </span>
                </div>
                <div class="alert alert-danger add-new-volume-errors error-msg-container">
                    <span class="alert-message error-msg-date-element hide"></span>
                </div>
                <div class="alert alert-danger add-new-volume-errors error-msg-container">
                    <span class="alert-message error-msg-date-element hide"></span>
                </div>
              </div>
              <div class="modal-footer">
                  <button type="button" class="btn clos-btn btn-default" data-dismiss="modal">Cancel</button>
                  <button type="button" class="btn btn-primary js-save-new-sales-month">Save</button>
              </div>
      </div>
    </div>
</div>
